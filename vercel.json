{
  "version": 2,
  "builds": [
    {
      "src": "app/api.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app/api.py"
    }
  ],
  "excludeFiles": [
    "venv/",
    "__pycache__/",
    "*.pyc",
    ".env",
    ".git/",
    "*.log"
  ]
}